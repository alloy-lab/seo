{
  "name": "@alloylab/seo",
  "version": "1.0.0",
  "description": "SEO utilities and components for modern web applications",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "seo-cli": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "docs:serve": "node scripts/serve-docs.js 8080",
    "docs:serve:python": "cd docs && python3 -m http.server 8080",
    "docs:build": "npm run build && mkdir -p docs/assets && cp -r dist docs/assets/ && cp package.json docs/assets/",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .js,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.ts,.tsx --fix",
    "commitlint": "commitlint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc --noEmit --project tsconfig.test.json",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run test:run && npm run lint && npm run typecheck && npm run typecheck:test",
    "prepare": "lefthook install && npm run build",
    "publish": "npm publish --access public",
    "hooks:install": "lefthook install",
    "hooks:uninstall": "lefthook uninstall",
    "version": "npm run format && git add -A",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "seo",
    "meta-tags",
    "structured-data",
    "sitemap",
    "react",
    "typescript",
    "json-ld",
    "open-graph",
    "twitter-cards"
  ],
  "author": "Stephen Way <stephen@stephenway.net>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alloy-lab/overland.git",
    "directory": "packages/seo"
  },
  "bugs": {
    "url": "https://github.com/alloy-lab/overland/issues"
  },
  "homepage": "https://github.com/alloy-lab/overland/tree/main/packages/seo#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "payload": ">=3.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.16.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.0",
    "@types/node": "^24.5.2",
    "@types/react": "^18.3.12",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.16.0",
    "jsdom": "^25.0.1",
    "lefthook": "^1.13.2",
    "prettier": "^3.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.16.0",
    "vitest": "^3.2.4"
  }
}
